<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light" />

    <!-- <style name="AppTheme" parent="android:Theme.Light"></style> -->
    <style name="white_shadow_style">
        <item name="android:shadowColor">@color/white</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
    </style>

    <style name="black_shadow_style">
        <item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="reg_login_btn_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="category_child_tx_style">
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/white</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>
    
    <style name="price_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/golden</item>
        <item name="android:paddingRight">5dip</item>
            <item name="android:textSize">20sp</item>
    </style>
    
    <style name="title_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="edit_round_style">
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/edit_bg</item>
    </style>

    <style name="edit_hyaline_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@color/hyaline_color</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="rounded_button_style">
        <item name="android:drawableRight">@drawable/chevron</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_white_red_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="rounded_check_button_style">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_white_red_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="rounded_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/rounded_rectangle_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

     <style name="edit_hyaline_nopadding_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@color/hyaline_color</item>
    </style>
    
    <style name = "Share.Theme" parent="@android:style/Theme.Light.WallpaperSettings">
       <item name="android:windowNoTitle">true</item>
    </style>
</resources>